{{yield}}

{{!#paper-grid-list class="grid-list-demo-responsiveTiles" md-cols-gt-sm="10" md-cols-sm="3"
    md-row-height-gt-md="1:1" md-row-height="1:1"
    md-gutter-gt-md="16px" md-gutter-gt-sm="8px" md-gutter="4px"}}
{{#unless tempHide}}
  {{#grid-stack width="95%"
    options=(hash animate=true cellHeight=83 cellWidth="10%" width=10 disableOneColumnMode=true staticGrid=homeLocked alwaysShowResizeHandle=(unless homeLocked true))
    onChange=(action 'gridChange')
    onDragstop=(action 'dragStop')
    onEnable=(action 'gridEnabled')
  }}
      
    {{#each widgets as |widget index|}}
      {{#grid-stack-item options=(hash locked=widget.grid.locked width=widget.grid.width height=widget.grid.height x=widget.grid.x y=widget.grid.y id=index) as |item|}}
        {{!#paper-grid-tile md-colspan=widget.colspan md-colspan-sm=widget.colspan md-rowspan=widget.rowspan md-rowspan-sm=widget.rowspan}}
          {{ui/happy-widget widget=widget index=index item=item homeLocked=homeLocked}}
        {{!/paper-grid-tile}}
      {{/grid-stack-item}}
    {{/each}}


    {{!#paper-grid-tile md-colspan="1" md-rowspan="1"}}

    {{!/paper-grid-tile}}
    
  {{/grid-stack}}
{{/unless}}
{{!/paper-grid-list}}
{{#unless homeLocked}}
  {{ui/utils/new-widget widgets=(mut widgets)}}
{{/unless}}

